                  <button class="dropdown-item" type="submit">Drama</button>
                </form>
                <form action="/" method="POST">
                  <input type="hidden" name="order" value="<%= Order %>">
                  <input type="hidden" name="category" value="ecchi">
                  <button class="dropdown-item" type="submit">Ecchi</button>
                </form>
                <form action="/" method="POST">
                  <input type="hidden" name="order" value="<%= Order %>">
