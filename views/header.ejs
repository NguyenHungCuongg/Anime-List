            <li class="nav-item dropdown" data-bs-theme="dark">
              <% if(locals.Search!=="none") {Order="Unknown"} %>
              <a id="navbar_text" class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Order : <%= Order%>
