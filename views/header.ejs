                </form>
                <form action="/" method="POST">
                  <input type="hidden" name="order" value="<%= Order %>">
                  <input type="hidden" name="category" value="horror">
                  <button class="dropdown-item" type="submit">Horror</button>
                </form>
                <form action="/" method="POST">
